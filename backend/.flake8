[flake8]
# Flake8 configuration for Ebook Summary Gemini Backend
# Enforces code style consistency across the project

# Maximum line length (aligned with Black's default)
max-line-length = 88

# Directories to exclude from linting
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .egg,
    .eggs,
    dist,
    build,
    .pytest_cache,
    .mypy_cache,
    .coverage,
    htmlcov,
    alembic/versions,
    node_modules

# Error codes to ignore (for Black compatibility)
# E203: whitespace before ':' (conflicts with Black)
# W503: line break before binary operator (conflicts with Black)
# E501: line too long (handled by Black)
ignore =
    E203,
    W503,
    E501

# Additional error codes to ignore
# E402: module level import not at top of file (allow after docstrings)
# F811: redefinition of unused name (allow in tests)
extend-ignore =
    E402,
    F811

# Show error codes and source code in output
show-source = True

# Show error statistics
statistics = True

# Per-file ignores for specific patterns
per-file-ignores =
    __init__.py: F401,F403
    tests/*: F401,F841
    alembic/*: F401

# Complexity threshold (optional - uncomment to enable)
# max-complexity = 10
