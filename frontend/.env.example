# ============================================================================
# PDF Summary & Mindmap Application - Frontend Environment Configuration
# ============================================================================
#
# This file documents all required environment variables for the frontend.
# Copy to .env.local and fill in your actual values before running the application.
#
# SECURITY NOTE: Only variables prefixed with NEXT_PUBLIC_ are exposed to the browser.
# Never store sensitive data in public environment variables.
# Always keep .env.local in .gitignore
#
# ============================================================================
# REQUIRED API CONFIGURATION
# ============================================================================

# Backend API base URL (required)
# Development: http://localhost:8000/api
# Production: https://api.example.com/api
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Application name for display in UI
NEXT_PUBLIC_APP_NAME=PDF Summary & Mindmap Generator

# ============================================================================
# OPTIONAL: ANALYTICS & TRACKING
# ============================================================================

# Google Analytics ID (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (optional, frontend errors only)
# NEXT_PUBLIC_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# ============================================================================
# OPTIONAL: FEATURE FLAGS
# ============================================================================

# Enable/disable experimental features
NEXT_PUBLIC_ENABLE_EXPORT_FEATURE=true
NEXT_PUBLIC_ENABLE_MINDMAP_FEATURE=true

# ============================================================================
# OPTIONAL: UI/UX CONFIGURATION
# ============================================================================

# Max file size for display (in MB) - should match backend MAX_UPLOAD_SIZE_BYTES
NEXT_PUBLIC_MAX_FILE_SIZE_MB=100

# Documents per page in list view
NEXT_PUBLIC_DOCUMENTS_PER_PAGE=20

# Enable dark mode support
NEXT_PUBLIC_DARK_MODE_ENABLED=true

# ============================================================================
# OPTIONAL: API CLIENT CONFIGURATION
# ============================================================================

# API request timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT_MS=30000

# Enable verbose API logging in development
NEXT_PUBLIC_API_DEBUG=false

# Polling interval for async operations (in milliseconds)
# Used when waiting for summary/mindmap generation
NEXT_PUBLIC_POLLING_INTERVAL_MS=2000

# Max polling attempts before timeout
NEXT_PUBLIC_MAX_POLLING_ATTEMPTS=150

# ============================================================================
# OPTIONAL: DEVELOPMENT ONLY
# ============================================================================

# Enable mock API responses (for testing without backend)
NEXT_PUBLIC_MOCK_API=false

# Enable Redux DevTools (development only)
NEXT_PUBLIC_REDUX_DEVTOOLS=false

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
